<% if flash[:logout] %>
  <h2><%= flash[:logout] %></h2>
<% elsif flash[:reset] %>
  <h2><%= flash[:reset] %></h2>
<% else %>
  <h2>Login</h2>
<% end %>

<% if @messages != nil %>
  <% @messages.each do |msg| %>
    <h2><%= msg %></h2>
  <% end %>
<% end %>

<div class="display">
  <%= form_tag("/validate", method: "post") do %>
    <%= label_tag(:username, "Username:") %>
    <%= text_field_tag(:username) %>
    <%= label_tag(:password, "Password:") %>
    <%= password_field_tag(:password) %>
    <%= submit_tag("Submit") %>
  <% end %>
  <%= link_to "Forget your password?", "/password" %><br>
  <%= link_to "Forget your username?", "/username" %>
  <br>
  <p><%= flash[:reset] %></p>
</div>