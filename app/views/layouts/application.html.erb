<!DOCTYPE html>
<html>
  <head>
    <title>ReelBadNightRails</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>


  <body>
    <% if @user != nil %>
      <div class="login_bar">
        <div class="username">
          <p><%= @user.username %></p>
        </div>
        <div class="banner">
          <h3>A Reel Bad Night</h3>
        </div>
        <div class="login_button">
          <p><%= link_to "Logout", "/logout" %></p>
        </div>
      </div>
    <% else %>
      <div class="login_bar">
        <div class="username">
          <p>Not Logged In</p>
        </div>
        <div class="banner">
          <h3>A Reel Bad Night</h3>
        </div>
        <div class="login_button">
          <p><%= link_to "Login", "/login" %></p>
        </div>
      </div>
    <% end %>
  
    <div class="nav_column">
      <h3><a href="/">Home</a></h3>
      <ul>
        <li><a href="/events">Events</a></li>
        <li><a href="/patrons">Patrons</a></li>
        <li><a href="/drinks">Drinks</a></li>
        <li><a href="/films">Films</a></li>
      </ul>
      <h3><a href="/search">Search</a></h3>
    </div>

    <div class="layout">
      <%= yield %>
    </div> 
  </body>
</html>
