<h2>Edit an Event</h2>

<div class="display">
  
  <% @object.errors.full_messages.each do |msg| %>
    <p><%= msg %></p>
  <% end %>
  
  <div class="new_form">
    <%= form_for @object do |f| %>
      <%= f.label "start_time" %>
      <%= f.text_field("start_time") %><br>
  
      <%= f.label "host_msg" %>
      <%= f.text_field("host_msg") %><br>
  
      <%= f.label "current_event" %>
      <%= f.text_field("current_event") %><br>
  
      <%= f.label "film_id" %>
      <%= f.text_field("film_id") %><br>
  
      <%= f.submit "Update This!"%>
    <% end %>
    <%= link_to "Delete This!", "/events/#{@object.id}", :class => "form_button", method: :delete %>
  </div>
</div>