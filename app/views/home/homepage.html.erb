    </div>
    <div class="length_rating">
      <p>Film Length: <%= @previous_film.length %></p>
      <p>Tomatometer Rating: <%= @previous_film.rt_rating %></p>
    </div>
    <div class="trailer">
      <p>See the <a href="#{<%= @previous_film.trailer %>}">trailer</a>
    </div>
  <% end %>
</div>